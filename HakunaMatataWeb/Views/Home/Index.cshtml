	<div class="container-fluid">
		@if (Model.ESOGuides != null)
		{
			<div class="row">
				<div class="col-12">
					<h2>Most Recent Guides</h2>
				</div>

				@foreach (var g in Model.ESOGuides)
				{
				<div class="col-lg-@(12/Model.ESOGuides.Count) col-12">
					<p><span class="lead">@g.Title</span> by @g.Author</p>
					@if (!string.IsNullOrEmpty(g.ImageUrl))
					{
						<div class="col-12 img-tile" style="background-image: url(@g.ImageUrl);">
							.
						</div>
					}
					else
					{
						<div class="col-12 img-tile" style="background-image: url('/Content/img/placeholder.png');">
							.
						</div>
					}

					<p>Created: @g.ItemImportantDate</p>
					@Html.ActionLink("Details", "Details", "ESOGuide", new { id = g.Id }, null)
				</div>
				}
			</div>
		}

		@if (Model.ESOGuides != null)
		{
			<div class="row">
				<div class="col-12">
					<h2>Upcoming Guild Events</h2>
				</div>
				@foreach (var ge in Model.GuildEvents)
				{
				<div class="col-lg-@(12/Model.GuildEvents.Count) col-12">
					<p class="lead">@ge.Title</p>
					@if (!string.IsNullOrEmpty(ge.ImageUrl))
					{
						<div class="col-12 img-tile" style="background-image: url(@ge.ImageUrl);">
							.
						</div>
					}
					else
					{
						<div class="col-12 img-tile" style="background-image: url('/Content/img/placeholder.png');">
							.
						</div>
					}
					<p>Next Event: @ge.ItemImportantDate</p>
					@Html.ActionLink("Details", "Details", "GuildEvents", new { id = ge.Id }, null)
				</div>
				}
			</div>
		}

		@if (Model.ESOGuides != null)
		{
			<div class="row">
				<div class="col-12">
					<h2>Most Recent News</h2>
				</div>
				@foreach (var n in Model.News)
				{
				<div class="col-lg-@(12/Model.News.Count) col-12">
					<p class="lead">@n.Title</p>

					@if (!string.IsNullOrEmpty(n.ImageUrl))
					{
						<div class="col-12 img-tile" style="background-image: url(@n.ImageUrl);">
							.
						</div>
					}
					else
					{
						<div class="col-12 img-tile" style="background-image: url('/Content/img/placeholder.png');">
							.
						</div>
					}


					<p>Created: @n.ItemImportantDate</p>
					@Html.ActionLink("Details", "Details", "News", new { id = n.Id }, null)
				</div>
				}
			</div>
		}


	</div>
